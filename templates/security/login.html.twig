{% extends 'base.login.html.twig' %}

{% block body %}
	<div class="form-signin w-100 m-auto text-center">
		<a href="/" style="color:black;text-decoration:none">
	
		<img src="/img/loup.png" alt="Photo loup" class="child-photo">
    		&nbsp;
			<p style="line-height:40px;">
				<b>Loup</b>
			</p>
		</a>
		{% if error %}
			<div class="alert alert-danger" role="alert">
				<div>Identifiants invalides</div>
			</div>
		{% endif %}
		<form action="{{ path('app_login') }}" method="post">

			<div class="form-floating">
				<input type="email" class="form-control" id="email" name="_username" value="{{last_username}}" required>
				<label for="email">Email</label>
			</div>
			<div class="clearfix">&nbsp;</div>
			<div class="form-floating">
				<input type="password" class="form-control" id="password" name="_password" required>
				<label for="password">Mot de passe</label>
			</div>
			<div class="clearfix">&nbsp;</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="w-100 btn btn-lg btn-primary" type="submit">Connexion</button>
		</form>
	</div>

{% endblock %}
