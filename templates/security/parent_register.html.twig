{% extends 'base.login.html.twig' %}

{% block body %}
<div class="form-signup m-auto text-center">


    <a href="/" style="color:black;text-decoration:none">

        <img src="/img/loup.png" alt="Photo loup" class="child-photo"/>
        &nbsp;
        <p style="line-height:40px;">
            <b>Loup</b>
        </p>
    </a>



        <h2>Inscription d'un parent</h2>
        <p class="text-muted">Veuillez remplir vos informations ainsi que le pr√©nom de votre enfant.</p>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                <div>{{error}}</div>
            </div>
        {% endif %}


        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.childFirstName) }}
            {{ form_widget(form.childFirstName, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

